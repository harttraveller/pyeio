{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://harttraveller.github.io/pyeio/ff.schema.json",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "extension": {
                "type": "string",
                "description": "The primary file extension"
            },
            "mime_type": {
                "type": "string",
                "description": "The MIME type of the file format"
            },
            "wikipedia_link": {
                "type": "string",
                "format": "uri",
                "description": "Link to the Wikipedia page for this file format"
            },
            "variant_extensions": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "Array of variant extension strings"
            }
        },
        "required": [
            "extension",
            "mime_type",
            "wikipedia_link",
            "variant_extensions"
        ]
    }
}